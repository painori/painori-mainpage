rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write for visitor stats
    match /stats/{document=**} {
      allow read, write: if true;
    }

    // Allow public read/write for lounge posts
    match /posts/{document=**} {
      allow read, write: if true;
    }
    
    // Keep other collections secure (adjust as needed)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
